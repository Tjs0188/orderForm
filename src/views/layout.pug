doctype html
html
  head
    title= `Order Form ${title ? `| ${title}` : ""}`
    link( rel="preconnect" href="https://fonts.googleapis.com")
    link( rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&family=Material+Symbols+Outlined&display=swap" rel="stylesheet")
    link(rel='stylesheet', href='/css/style.css')
    link(rel="icon", type="image/png", href="/favicon.png")
    block head
  body
    div(class="h-screen")
      div(class="flex px-20 p-2 justify-between shadow ")
        a(href="/" class="w-1/5")
          img(class="py-4" src="/images/logo.png" alt="Bloomfield Homes")
        div(class="flex gap-10 items-center")
          if currentUser
              span.gap-2.flex.items-center
                | Welcome, #{currentUser.name}
                if currentUser.email.toLowerCase() === "avery@bloomfieldhomes.net"
                  img(class="py-4" src="/images/flower.svg" alt="Flower")
              a(href="/auth/logout" class="btn-outline border-blue text-blue")
                | Logout
          else
            a(href="/auth/login" class="btn")
              | Login
      div.w-full
        script(src="/js/preline.bundle.js")
        block content


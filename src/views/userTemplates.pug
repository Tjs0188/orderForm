extend layout
include mixins/table

block content
  div.flex.flex-col.container.mx-auto
    div.flex.px-10.justify-between.text-center
      h1.text-4xl.font-bold.py-10
        = currentUser.name.charAt(0).toUpperCase() + currentUser.name.slice(1) + "'s Form Templates"
      div.py-10
        a(href="/" class="btn-outline")
          | Back to Home
    div.px-10.w-full
      +table({
        columns: [
          {name: "Id", selector: "id"},
          {name: "Template Name", selector: "name"},
          {name: "Created At", selector: "createdAt"},
        ],
        rows: templates,
        currentPage,
        actions: [
          {name: "Delete", link: "/templates", class: "text-rose-500", method: "DELETE", dataSelector: "id"}
        ], 
        totalRows: totalCount})
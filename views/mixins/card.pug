mixin card({cardTitle, cardSubTitle, cardLink})
  div(class="flex flex-col bg-white border shadow-sm rounded-xl p-4 md:p-5 print:flex-1 break-inside-avoid break-before-avoid")
    h3(class="text-lg font-bold text-gray-800")
      = cardTitle || "Card title"
    if cardSubTitle
      p(class="mt-1 text-xs font-medium uppercase text-gray-500")
        = cardSubTitle
    div(class="mt-2 text-gray-500 break-inside-avoid break-before-avoid")
      block
    if cardLink && cardLink.linkText
      a(class="mt-3 inline-flex items-center gap-x-1 text-sm font-semibold rounded-lg border border-transparent text-blue-600 decoration-2 hover:text-blue-700 hover:underline focus:underline focus:outline-none focus:text-blue-700 disabled:opacity-50 disabled:pointer-events-none" href=cardLink.linkUrl || "#")
        = cardLink.linkText
        svg(class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
          path(d="m9 18 6-6-6-6")

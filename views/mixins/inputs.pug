mixin input({label, placeholder, type="text", name, value})
  div(class="max-w-sm print:max-w-full")
    label(
      for=name 
      class="block text-sm font-medium mb-2 print:mb-0 print:font-bold print:text-xs"
    )
      = label
    input(
      type=type
      name=name
      value=value
      id=`${name}-input` 
      class="py-2 px-4 block w-full border print:border-0 rounded-lg text-slate-800 text-sm print:text-xs focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" 
      placeholder=placeholder || label
    )

mixin select({label, placeholder, name, id, value})
  div(class="print:max-w-full")
    label(for=name class="block text-sm font-medium mb-2 dark:text-white")
      =label
    select(
      id=`${id || name}-select`
    class="py-2 px-4 pe-9 block bg-white w-full border rounded-lg text-sm text-slate-800 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
    name=name
    )
      option(value="" selected disabled hidden)
        = placeholder || label
      block
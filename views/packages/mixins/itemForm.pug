mixin itemForm()
  form(method="POST", action=`/users/${action == "edit" ? `edit/${id}` : null}` class="w-1/3 mx-0 py-4")
    .mb-4
      +select({label: "Category", name: "category", placeholder: "Select a Category"})
        each option in itemCategories
          option(value=option) #{option}
    .mb-4.flex.gap-2
      +input({label: "Product Number", name:"product_number", placeholder:"Enter the Product Number", className: "w-full"})
      +input({label: "Description", name:"description", placeholder:"Enter the Product Description", className: "w-full"})

    button(type="submit" class="btn w-full")
      | Create Item
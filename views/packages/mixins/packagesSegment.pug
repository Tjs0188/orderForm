include ../../mixins/table
include ../../mixins/inputs

mixin packagesSegment()
  div(class="container mx-auto hidden" id="packages-segment" role="tabpanel" aria-labelledby="packages-tab")
    h1.text-2xl.font-bold.mb-4 Package Form
    .flex.py-6
      form(method="POST", action=`/users/${action == "edit" ? `edit/${id}` : null}` class="w-1/3 mx-0 py-4")
        .mb-4.flex.gap-2
          +input({label: "Name", name:"name", placeholder:"Enter the Product Name", className: "w-full"})
          +input({label: "Meta", name:"meta", placeholder:"Enter the Product Meta", className: "w-full"})
        .mb-4
          +select({label: "Category", name: "category", placeholder: "Select a Category"})
            each option in packageCategories
              option(value=option) #{option}
        button(type="button" class="btn w-full")
          | Create Package
      div(class="w-full ms-6")
        h2.text-xl.font-bold Packages
        div(class="overflow-y-scroll max-h-56 w-full")
          +table({columns: [{name: 'Name', selector: "name", truncated: true}, {name: "Meta", selector: "meta", truncated: true}, {name: "Category", selector: "category"}], rows: packages, stickyHeader: true})
    .flex.py-6
      div(class="flex flex-col gap-4 py-10 max-w-1/3")
        +searchSelect({label: "Search Packages", name: "search", placeholder: "Search Packages"})
          each option in packages 
            option(value=option.id)
              | #{option.name} - #{option.meta}
        +searchSelect({label: "Search Items", name: "search", placeholder: "Search Items"})
          each option in items 
            option(value=option.id)
              | #{option.product_number} - #{option.description}
        button(type="button" class="btn w-full")
          | Add Item to Package
      .flex.flex-col.gap-4.ms-6.w-full
        h2.text-xl.font-bold Selected Package Items
        div(class="overflow-y-scroll max-h-56 w-full")
          +table({columns: [{name: 'Name', selector: "name", truncated: true}, {name: "Meta", selector: "meta", truncated: true}, {name: "Category", selector: "category"}], stickyHeader: true})
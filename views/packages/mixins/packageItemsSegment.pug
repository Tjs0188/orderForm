include ../../mixins/table
include ../../mixins/inputs

mixin packageItemsSegment()
  div(class="container mx-auto hidden" id="package-items-segment" role="tabpanel" aria-labelledby="package-items-tab")
    h1.text-2xl.font-bold.mb-4 Package Items Form
    .flex
      form(method="POST", action=`/users/${action == "edit" ? `edit/${id}` : null}`)
        .mb-4.flex.gap-2
          +input({label: "Name", name:"name", placeholder:"Enter the Product Name", className: "w-full"})
          +input({label: "Meta", name:"meta", placeholder:"Enter the Product Meta", className: "w-full"})
        .mb-4
          +select({label: "Category", name: "category", placeholder: "Select a Category"})
            each option in packageCategories
              option(value=option) #{option}
        button(type="submit" class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2") Create Item
      
      div(class="overflow-y-scroll max-h-[34rem] ms-6")
        +table({columns: [{name: 'Name', selector: "name", truncated: true}, {name: "Meta", selector: "meta", truncated: true}, {name: "Category", selector: "category"}], rows: packages, stickyHeader: true})